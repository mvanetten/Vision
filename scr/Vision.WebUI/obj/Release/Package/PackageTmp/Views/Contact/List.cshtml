@model IEnumerable<Vision.Domain.Entities.Contact>

@{
    ViewBag.Title = "Overzicht contacten";
}

<h4>
    Overzicht contacten
</h4>

<hr />
    <p>
        @Html.ActionLink("Nieuw", "Create","", new { @class = "btn btn-primary" } )
        
        
         
        
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.companyname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.firstame)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastname)
            </th>
        </tr>
    
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.companyname, "Edit", new { id = item.contactID })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.firstame)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastname)
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>
                @Html.ActionLink("Contact aanmaken", "Create", "Contact")
            </td>
            <td>
            </td>
            <td>
            </td>
        </tr>
    }



    </table>